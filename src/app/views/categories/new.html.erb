<% provide(:title, 'New Category') %>
<h1>Add Category</h1>
<br/><br/>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category, url: '/categories/new') do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <br/>

      <%= f.submit "Create new category", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
