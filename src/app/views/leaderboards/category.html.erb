<% provide(:title, 'Leaderboard') %>
<br/><br/>

<h1> Leaderboard </h1>

<br/><br/>

<table class="table table-hover">

	<thead>
		<tr>
			<th>Name</th>
			<th>Username</th>
			<th>Score</th>
		</tr>
	</thead>

	<tbody>

		<% @users.each do |user| %>
		<tr>
		<td><%= user[:name] %></td>
		<td><%= user[:username] %></td>
		<td><%= user[:score] %></td>
		<tr/>
		<% end %>

	</tbody>
</table>