<% provide(:title, 'Add Quiz') %>

<br/><br/>
<h1>New Quiz</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@quizz, url: '/quizzs/new') do |f| %>
<br/>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
<br/>
      <%= f.label :Subcategory %>
      <select name = "quizz[subcategory_id]" id = "quizz_subcategory_id" class = "form-control">
        <% @subcategories.each do |subcategory| %>
          <option value = "<%= subcategory.id %>">
            <%= subcategory.name %>
          </option>
        <% end %>
      </select>
<br/>
<br/>
      <%= f.submit "Create Quizz", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
